<style>
	section {
		display: flex;
		gap: 2rem;
		padding: 2rem;
		flex-wrap: wrap;
		justify-content: center;
		margin-bottom: 2rem;
	}

	article {
		display: flex;
		flex-direction: column;
		gap: 1.25rem;

		&:first-of-type {
			flex: 1 1 40%;
		}
	}

	article h2 {
		font-size: 2.5rem;
	}

	article h3 {
		font-size: 1.5rem;
	}

	ul li :global(svg) {
		fill: white;
		width: 100px;
		height: 100px;
	}

	ul {
		display: grid;
		grid-template-columns: 1fr 1fr 1fr;
		grid-template-rows: 1fr 1fr;
		list-style: none;
		place-content: center;
	}

	li {
		border-color: white;
		border-style: solid;
		border-width: 0 1px 1px 0;
		padding: 0 1rem;

		&:nth-of-type(3) {
			border-width: 0 0 1px 0;
		}

		&:nth-of-type(n + 4) {
			border-width: 0 1px 0 0;
		}

		&:nth-of-type(6) {
			border-width: 1px 0 0 0;
		}
	}
</style>
